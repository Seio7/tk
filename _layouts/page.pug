---
layout: default
---

#content(data-router-wrapper)
  .router-view(data-router-view="{{ page.name | split: '.' | first }}")
    | {%- if page.url == "/" -%}
    img.hero-image.mobile-hidden(src="{{ 'assets/images/hero-tablet-desktop.jpg' | relative_url }}" alt="Tanja Knappe")
    .mobile-hero-image.mobile-show
    | {%- endif -%}
    | {%- if page.hero -%}
    .hero-image-page
    | {%- endif -%}
    .container
      .col-2-container
        .main-col
          main
            | {{ content }}
        .side-col.mobile-hidden
          aside.main-sidebar
            | {%- if page.sidebar == "contact" -%}
            include sidebar-contact
            | {%- else -%}
            include sidebar-primary
            | {%- endif -%}
    | {% if page.prefooter %}
    | {% include pre-footer %}
    | {% endif %}
