#content(data-router-wrapper)
  .router-view(data-router-view="{{ page.name | split: '.' | first }}")
    #blog-content
      .container
        a(href="{% link blog/index.html %}")
          .blog-hero-image(style="background-image: url(https://res.cloudinary.com/dc5q25fma/image/upload/c_scale,w_1170,f_auto/blog-hero_emkkly.jpg)")
            h1.page-heading Blog
        .col-2-container
          .main-col
            main
              article.blog-main-content
                h2
                  | Kategorie: 
                  span(style="color: #bdcd00") {{ page.title }}
                | {% for post in page.posts %}
                .blog-post-teaser
                  a(href="{{ post.url }}")
                    .img-wrapper39
                      img(src="{{ post.featured_image }}", alt="{{ post.title }}")
                  h3 {{ post.title }}
                  .blog-post-info
                    | von 
                    a(href="{% link about.pug %}") Tanja Knappe 
                    | / {{ post.date | date: "%d.%m.%Y" }} / 
                    a(href="/blog/{{ post.categories[0] | downcase | replace: ' ', '-' }}") {{ post.categories[0] }}
                  .blog-post-excerpt {{ post.excerpt | strip_html | truncatewords: 25 }}
