article.maps.contact-sidebar
  section.map-practise.sidebar-map
    iframe(src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2638.4050357454284!2d11.615432815665342!3d48.60208977926329!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x479e5abbb3178ca9%3A0x29b97498732f37a!2sJosef-Reindl-Stra%C3%9Fe%2029%2C%2085283%20Wolnzach!5e0!3m2!1sen!2sde!4v1567272236135!5m2!1sen!2sde" width="100%" height="300px" frameborder="0" style="border:0;" allowfullscreen="" defer)
    h3 {{ site.company }}
    address
      p {{ site.ceo }}
        br
        | {{ site.street }}
        br
        | {{ site.postal_code }} {{ site.city }}
    .contact-info-sidebar
      p
        a(href="{{ site.tel_link }}") {{ site.tel }}
        br
        a(href="mailto:{{ site.email }}") {{ site.email }}
  hr.faded
  | {% assign locations = site.data.course_info.courses | map: "location" %}
  | {% for location in locations %}
  section.sidebar-map
    iframe(src="https://www.google.com/maps/embed/v1/place?q={{ location.street | strip | replace: ' ', '+' }}+{{ location.postal_code }}+{{ location.city | strip | replace: ' ', '+' }}+Deutschland&key=AIzaSyB8yBp531Rk8fCNGB2Hgz7E9rKxe3aJJLw" width="100%" height="300px" frameborder="0" style="border:0;" allowfullscreen="" defer)
    h3 {{ location.title }}
    address
      p {{ location.street }}
        br
        | {{ location.postal_code }} {{ location.city }}
    | {% if location.tel != empty or location.email != empty %}
    .contact-info-sidebar
      p
        | {% if location.tel != empty %}
        a(href="tel:49{{ location.tel }}") {{ location.tel }}
        br
        | {% endif %}
        | {% if location.email != empty %}
        a(href="mailto:{{ location.email }}") {{ location.email }}
        | {% endif %}
    | {% endif %}
  hr.faded
  | {% endfor %}
